generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Review {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  tmdbId    Int
  rating    Float
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      Tag[] // ← これを必ず入れる
}

model Tag {
  id      String   @id @default(cuid())
  name    String   @unique
  reviews Review[] // ← これだけでOK（@relation不要）
}
